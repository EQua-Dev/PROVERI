<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/auth_inner_bg"
    tools:context=".Verify">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/iv_captured_image"
        android:layout_centerHorizontal="true"
        android:src="@drawable/auth_bg"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:id="@+id/layout_input"
        android:weightSum="3">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_product_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:layout_margin="8dp"
            style="@style/Theme.PROVERI"
            android:hint="@string/hint_verify"
            android:inputType="text"/>

    </LinearLayout>


    <Button
        android:id="@+id/btnVerify"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_input"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="Verify" />

</RelativeLayout>